{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "$id": "http://example.com/DBMS.schema.json",
    "type": "object",
    "title": "DBMS-Connection",
    "description": "Schema for table in DB made for CDC Benchmark tool.",
    "default": {},
    "examples": [
        {
            "DBMS": "PostgreSQL",
            "db": "DB_NAME",
            "ip": "90.241.63.1",
            "user": "USER_NAME",
            "password": "PASSWORD",
            "port": 3306
        }
    ],
    "required": [
            "DBMS",
            "db",
            "ip",
            "port",
            "user",
            "password"
        ],
    "properties": {
        "DBMS": {
            "$id": "/properties/DBMS",
            "type": "string",
            "title": "DBMS driver",
            "description": "Name of the driver of DBMS",
            "default": "",
            "examples": [
                "PostgreSQL"
            ]
        },
        "db": {
            "$id": "/properties/db",
            "type": "string",
            "title": "Database",
            "description": "Database name",
            "default": "",
            "examples": [
                "DB NAME"
            ]
        },
        "URL": {
            "$id": "/properties/url",
            "type": "string",
            "formate": "iri",
            "title": "URL",
            "description": "URL of DBMS",
            "default": "",
            "examples": [
                "http://mysite.com/db1:1984"
            ]
        },
        "ip": {
            "$id": "/properties/ip",
            "type": "string",
            "formate": "ipv4",
            "title": "IP",
            "description": "IP-Address of DBMS",
            "default": "",
            "examples": [
                "90.241.63.1"
            ]
        },
        "user": {
            "$id": "/properties/user",
            "type": "string",
            "title": "User",
            "description": "User name",
            "default": "",
            "examples": [
               "USERNAME"
            ]
        },
        "password": {
            "$id": "/properties/password",
            "type": "string",
            "title": "Password",
            "description": "User password",
            "default": "",
            "examples": [
                "PASSWORD"
            ]
        },
        "port": {
            "$id": "//properties/port",
            "type": "number",
            "minimum": 0,
            "maximum": 65535,
            "title": "Port",
            "description": "Port number of DBMS",
            "default": "",
            "examples": [
                3306
            ]
        }
    },
    "additionalProperties": true
}

